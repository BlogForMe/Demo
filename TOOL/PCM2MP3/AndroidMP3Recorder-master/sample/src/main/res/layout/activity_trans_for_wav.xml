<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="MP3音频地址： "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/recorder_mp3_path_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="MP3音频地址" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="WAV音频输出地址： "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/recorder_wav_path_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="WAV音频地址" />

        <Button
            android:id="@+id/recorder_trans_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="MP3 Trans WAV" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recorder_play_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play" />
    </LinearLayout>

</LinearLayout>